<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_height="120dp">
    <LinearLayout
        android:id="@+id/ll_buck"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_bucket_name"
            android:textColor="@color/blue"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bucket_location"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/tab_color_true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bucket_createDate"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="left"
            android:textColor="@color/tab_color_true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_new_buck"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:src="@mipmap/add_task"
            android:layout_centerInParent="true"
            android:layout_height="50dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
